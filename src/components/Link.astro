---
const { title } = Astro.props;
---

<div class="container">
  <slot />
  <div class="textbox">
    <h1>{title}</h1>
  </div>
</div>

<style>
  .container {
    position: relative;

    text-align: center;
    width: 100vw;
    margin-top: -6px;
  }

  .textbox {
    position: absolute;
    top: 49.6%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: var(--box_color);
    padding: 10% 20% 10% 20%;
    width: 60%;
    height: 49%;
  }

  h1 {
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);

    font-family: var(--alt_font);
    width: 85%;
    color: white;
  }
</style>
